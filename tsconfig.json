{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5",
    "outDir": "./dist",
    "moduleResolution": "Node",  /* It allows json file to import*/
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2017"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
